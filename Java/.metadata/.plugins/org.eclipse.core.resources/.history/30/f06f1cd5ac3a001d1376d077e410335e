
public class ItemPedido extends Produto{
	public ItemPedido(int ID, String Nome, String Descricao, double PrecoUnitario, int QuantidadeEstoque,
			String Categoria) {
		super(ID, Nome, Descricao, PrecoUnitario, QuantidadeEstoque, Categoria);

	}
	String Produto;
	String Pedido;
	boolean Desconto;
	String TipoDesconto;
	double PrecoTotalSD;
	double QuantidadePedido;
	double CalculaDesconto;
	
	public String getProduto() {
		return this.Produto;
	}
	public String getPedido() {
		return this.Pedido;
	}
	public boolean getDesconto() {
		return this.Desconto;
	}
	public String getTipoDesconto() {
		return this.TipoDesconto;
	}
	
	public double PrecoTotalSemDesconto() {
		 PrecoTotalSD = PrecoUnitario*QuantidadePedido;
		 return PrecoTotalSD;
	}
	public double CalculaDesconto() {
	if (Desconto = true) {
		CalculaDesconto = PrecoTotalSD*0.2;
	} else if (Desconto = false) {
		CalculaDesconto = 0;
	} else if(QuantidadePedido > 10){
		CalculaDesconto = PrecoTotalSD * 0.1;
	}
	return CalculaDesconto;
	}
}
