package br.com.comex.csv;

import java.util.List;

public class MontanteTotalVendas {
	public double calcularTotalPreco(List<PedidosCsv> pedido) {		
		Double PrecoTotal = 0.0;
		int QuantidadeTotal = 0;
		for (PedidosCsv Pedidos : pedido) {
			PrecoTotal = PrecoTotal + Double.parseDouble(Pedidos.getPreco());
			QuantidadeTotal = QuantidadeTotal + Integer.parseInt(Pedidos.getQuantidade())
		}
		
		return PrecoTotal;
	}
}
