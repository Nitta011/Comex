package br.com.comex.csv;

import java.util.ArrayList;
import java.util.List;
import br.com.comex.csv.PedidosCsv;

public class MontanteTotalVendas {

	public double calcularTotalPreco(List<PedidosCsv> pedido) {
		
		Double precoConvertido = 0.0;
		double quantidadeConvertida = 0.0;
		double calcularMontanteTotal = 0.0;
		for (PedidosCsv Pedidos : pedido) {
			double a = Double.parseDouble(Pedidos.getPreco());
			double b = Double.parseDouble(Pedidos.getQuantidade());
			precoConvertido = a * b; 
			System.out.println(precoConvertido);
			PedidosCsv p1;
			double precoP1 = Double.parseDouble(p1.getPreco());
			PedidosCsv p2;
			double precoP2 = Double.parseDouble(p2.getPreco());
			if(precoP1 == precoP2) {
				return 0;
			} else if (precoP1 > precoP2){
				return 1;
			} else {
				return -1;
			}
		}
			
		}
			
		return precoConvertido;
	}

}
